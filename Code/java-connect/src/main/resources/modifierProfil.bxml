<myApp:Menu title="Java Connect !" maximized="true" xmlns:bxml="http://pivot.apache.org/bxml" xmlns:myApp="stri.java_connect.ihm" xmlns="org.apache.pivot.wtk"> 		
	<Border styles="{padding:6}">

                <TablePane styles="{horizontalSpacing:10, verticalSpacing:10}">
            		<columns>
                		<TablePane.Column width="1*"/>
           			</columns>
                     
                    <TablePane.Row>
						<Label text="Modification du profil" styles="{font:{size:14, bold:true}, horizontalAlignment:'center'}"/>
                    </TablePane.Row>
 
		            <TablePane.Row height="-1">
		                    <BoxPane bxml:id="idConnexionBoxPane" Form.label="connexion">
                                <Label text="Nom" styles="{font:{bold:true}}" />
                                <TextInput bxml:id="nomTextInput" textSize="10" maximumLength="8" />
                                <TextInput bxml:id="mailTextInput" prompt="mail"/>
                            	<TextInput bxml:id="mdpTextInput" prompt="password"/>
                           	</BoxPane>
		            </TablePane.Row>
 
                    <TablePane.Row>
                        <BoxPane styles="{horizontalAlignment:'center', verticalAlignment:'center'}">
                            <PushButton bxml:id="btConnexion" buttonData="Connexion"/>         
                        </BoxPane>
                    </TablePane.Row>
                    
                    
                    <TablePane.Row>
                        <BoxPane styles="{horizontalAlignment:'center', verticalAlignment:'center'}">
                            <PushButton bxml:id="btInscription" buttonData="Inscription"/>       
                        </BoxPane>
                    </TablePane.Row>                    
                    
                    
                    <TablePane.Row>
                        <BoxPane styles="{horizontalAlignment:'center', verticalAlignment:'center'}">
                            <PushButton bxml:id="btListeProfil" buttonData="Liste des profils"/>        
                        </BoxPane>
                    </TablePane.Row>                  
                   
                   
                    <TablePane.Row>
                        <BoxPane styles="{horizontalAlignment:'center', verticalAlignment:'center'}">
                            <PushButton bxml:id="btModifProfil" buttonData="Modifier votre profil"/>           
                        </BoxPane>
                    </TablePane.Row>                    
                
                
                    <TablePane.Row>
                        <BoxPane styles="{horizontalAlignment:'center', verticalAlignment:'center'}">
                            <PushButton bxml:id="btMessagerieEmail" buttonData="Messagerie par mail"/>           
                        </BoxPane>
                    </TablePane.Row>  
                    
                    
                    <TablePane.Row>
                        <BoxPane styles="{horizontalAlignment:'center', verticalAlignment:'center'}">
                            <PushButton bxml:id="btMessagerieP2P" buttonData="Messagerie peer to peer"/>           
                        </BoxPane>
                    </TablePane.Row>                                    
                    
                </TablePane>
 
    </Border>
	
</myApp:Menu>